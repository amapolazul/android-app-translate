<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="8dp"
    android:paddingTop="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.amapolazul.www.traductorandriod.under_six.letters.letter_b.LetterBActivityTwo"
    android:background="@drawable/fondo202"
    android:id="@+id/letterBActivityLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bien"
        android:src="@drawable/bien"
        android:onClick="playGoodSound"
        android:layout_below="@+id/imageView35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blanco"
        android:src="@drawable/blanco"
        android:onClick="playWhiteSound"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignTop="@+id/bien"
        android:layout_toRightOf="@+id/bien"
        android:layout_toEndOf="@+id/bien"
        android:layout_marginRight="34dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boca"
        android:src="@drawable/boca"
        android:onClick="playMouthSound"
        android:layout_alignTop="@+id/blanco"
        android:layout_alignLeft="@+id/brazo"
        android:layout_alignStart="@+id/brazo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bombero"
        android:src="@drawable/bombero"
        android:onClick="playFireManSound"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignTop="@+id/boca"
        android:layout_toRightOf="@+id/boca"
        android:layout_toEndOf="@+id/boca" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/borrador"
        android:src="@drawable/borrador"
        android:onClick="playEraserSound"
        android:layout_alignTop="@+id/bombero"
        android:layout_toRightOf="@+id/bombero"
        android:layout_toEndOf="@+id/bombero"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botas"
        android:src="@drawable/botas"
        android:onClick="playBootsSound"
        android:layout_alignTop="@+id/botellas"
        android:layout_toLeftOf="@+id/blanco"
        android:layout_toStartOf="@+id/blanco" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botellas"
        android:src="@drawable/botella"
        android:onClick="playBottleund"
        android:layout_alignTop="@+id/bufanda"
        android:layout_alignLeft="@+id/blanco"
        android:layout_alignStart="@+id/blanco" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bufanda"
        android:src="@drawable/bufanda"
        android:onClick="playScarfSound"
        android:layout_alignTop="@+id/burro"
        android:layout_toLeftOf="@+id/borrador"
        android:layout_toStartOf="@+id/borrador" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volverPrincipalB"
        android:src="@drawable/fichas3"
        android:onClick="returnToBLetter"
        android:layout_alignRight="@+id/bien"
        android:layout_alignEnd="@+id/bien" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brazo"
        android:src="@drawable/brazo"
        android:onClick="playArmSound"
        android:layout_alignTop="@+id/bufanda"
        android:layout_alignLeft="@+id/imageView35"
        android:layout_alignStart="@+id/imageView35" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/burro"
        android:src="@drawable/burro"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/borrador"
        android:layout_alignStart="@+id/borrador"
        android:onClick="playDonkeySound" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView35"
        android:src="@drawable/fichas2"
        android:layout_alignTop="@+id/volverPrincipalB"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
